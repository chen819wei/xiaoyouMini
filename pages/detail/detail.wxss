/* pages/detail/detail.wxss */
.container{
    background-color: #f5f5f5;
    width: 100%;
    padding-top: 0%;
}
.head{
    background-color: #fff;
    padding-top: 40rpx;
    padding-bottom: 20rpx;
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
}
.title{
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
    padding-left: 600rpx;
}
.price{
    font-size: 28rpx;
    color: red;
    padding-left: 600rpx;
}
.head image{
    width: 100%;
    height: 500rpx;
    box-shadow: 2rpx 2rpx 3rpx #e3e3e3;
}
.sub-container{
    width: 690rpx;
    display:flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
}
.headline{
    font-style: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}
.description{
    text-indent: 58rpx;
    font-weight: 500;
}
.detail-contact{
    width: 100%;
    display:flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-bottom: 100rpx;
    font-size: 28rpx;
    color: #666;
}
.vertical{
    display: flex;
    flex-direction: column;

}
.contact{
    color: #999;
    margin-right: 30rpx;
}
